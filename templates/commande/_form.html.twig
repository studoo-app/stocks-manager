<div class="row mt-5">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header h5">Nouvelle commande</div>
            {{ form_start(form) }}
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
            <div class="card-footer hstack gap-2 d-flex justify-content-center">
                <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
